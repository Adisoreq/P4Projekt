<Window x:Class="Projekt.Views.AddPollView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj ankietę" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Nazwa ankiety:"/>
        <TextBox x:Name="PollNameBox" Margin="0,5"/>
        <TextBlock Text="Opis:"/>
        <TextBox x:Name="PollDescBox" Margin="0,5"/>
        <Button Content="Dodaj ankietę" Command="{Binding AddPollCommand}" />
        <Button Content="Dodaj opcję" Command="{Binding AddOptionCommand}" />
    </StackPanel>
</Window>