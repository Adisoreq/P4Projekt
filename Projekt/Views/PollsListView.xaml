<UserControl x:Class="Projekt.Views.PollsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Projekt.Models"
             xmlns:local="clr-namespace:Projekt.Views">
    <Grid>
        <ListBox x:Name="PollsListBox" 
                 ItemsSource="{Binding Polls}"
                 SelectedItem="{Binding SelectedPoll, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Poll name and description -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="Bold" 
                                       FontSize="14" 
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Description}" 
                                       Foreground="Gray" 
                                       FontSize="12" 
                                       TextWrapping="Wrap" 
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                        
                        <!-- Example category badges -->
                        <WrapPanel Grid.Column="1" 
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center">
                            <!-- Sample badge 1 -->
                            <Border Background="#E8F0FE" 
                                    CornerRadius="12" 
                                    Padding="8,3" 
                                    Margin="2">
                                <TextBlock Text="Nauka" 
                                           FontSize="10"
                                           Foreground="#3367D6"/>
                            </Border>
                            
                            <!-- Sample badge 2 -->
                            <Border Background="#E8F0FE"
                                    CornerRadius="12" 
                                    Padding="8,3" 
                                    Margin="2">
                                <TextBlock Text="Sport" 
                                           FontSize="10"
                                           Foreground="#3367D6"/>
                            </Border>
                            
                            <!-- Sample badge 3 -->
                            <Border Background="#E8F0FE" 
                                    CornerRadius="12" 
                                    Padding="8,3" 
                                    Margin="2">
                                <TextBlock Text="Polityka" 
                                           FontSize="10"
                                           Foreground="#3367D6"/>
                            </Border>
                        </WrapPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick" 
                              Command="{Binding PollSelectedCommand}"
                              CommandParameter="{Binding SelectedPoll}"/>
            </ListBox.InputBindings>
        </ListBox>
    </Grid>
</UserControl>